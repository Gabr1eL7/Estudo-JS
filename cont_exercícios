import java.util.Scanner;

class Main {  
  public static void main(String args[]) { 
    Scanner scan = new Scanner(System.in);

    
    System.out.println("Informe seu salário: "); 
    Int sal = scan.nextInt();

      if (sal <= 280){
      int aumento = sal*0.20;
      int atual = aumento + sal;
      System.out.println("Seu antigo salario era :" + sal + "recebeu aumento de 20%, no valor de: "+ aumento+ "e seu novo salário é de: " + atual);
    }

    else if (sal > 280 $$ sal < 700){
      int aumento = sal*0.15;
      int atual = aumento + sal;
      System.out.println("Seu antigo salario era :" + sal + "recebeu aumento de 15%, no valor de: "+ aumento+ "e seu novo salário é de: " + atual);
    }

     else if (sal > 700 $$ sal < 1500){
      int aumento = sal*0.10;
      int atual = aumento + sal;
      System.out.println("Seu antigo salario era :" + sal + "recebeu aumento de 10%, no valor de: "+ aumento+ "e seu novo salário é de: " + atual);
    }
     else if (sal > 1500){
      int aumento = sal*0.05;
      int atual = aumento + sal;
      System.out.println("Seu antigo salario era :" + sal + "recebeu aumento de 5%, no valor de: "+ aumento+ "e seu novo salário é de: " + atual);
    }
    
    
  } 
}

